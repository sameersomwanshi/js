java script code:-

//Area of triangle
const base = prompt('enter the value of base'); const height = prompt('enter the value of height');

const Area = 1/2*(base*height); document.writeln(`Area of triangle is ${Area}`);

//Area of rectangle

const length = prompt('enter the value of length'); const breadth = prompt('enter the value of breadth');

const Area = length*breadth; document.writeln(`Area of Rectangle is ${Area}`); 

//Area of circle

const radius = prompt('enter the radius of circle'); const Area = 3.14*(radius*radius); document.writeln(`Area of circle is ${Area}`);
