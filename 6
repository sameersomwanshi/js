// Removing a specific element
const arry = ["sahil", "onkar", "shreya", "vaishnavi"];
console.log("The original array is = " + arry + "\n");
arry.pop();
console.log("The modified array is = " + arry);

// Check if the array contains a specific element
const value = arry.includes("sahil");
console.log(value);
if (value) {
  console.log("Array contains the specific value.");
} else {
  console.log("Array does not contain the specific value.");
}

// Empty an array
const arry1 = [1, 2, 3];
arry1.length = 0;
console.log("arry1 is empty = " + arry1);
